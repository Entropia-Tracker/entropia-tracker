{
  "name": "entropia-tally",
  "productName": "Entropia Tally",
  "version": "1.0.0",
  "description": "Track Entropia Universe events",
  "license": "MIT",
  "repository": "EntropiaTally/entropia-tally-app",
  "main": "src/app.js",
  "author": {
    "name": "Slazor",
    "email": "no-email-support@example.com",
    "url": "https://github.com/EntropiaTally/entropia-tally-app"
  },
  "scripts": {
    "postinstall": "electron-builder install-app-deps",
    "lint": "xo src/",
    "start": "electron .",
    "build": "webpack --mode production",
    "build-dev": "webpack --mode development",
    "watch": "webpack --mode development --watch",
    "dev": "yarn build-dev && concurrently \"electron .\" \"BROWSER=none yarn watch\"",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --linux --win"
  },
  "dependencies": {
    "@emotion/react": "^11.9.0",
    "@emotion/styled": "^11.8.1",
    "@mui/icons-material": "^5.14.3",
    "@mui/material": "^5.14.3",
    "electron-context-menu": "^3.6.1",
    "electron-debug": "^3.2.0",
    "electron-store": "^8.1.0",
    "electron-unhandled": "^4.0.1",
    "electron-updater": "^6.1.1",
    "electron-util": "^0.17.2",
    "events": "^3.3.0",
    "lodash.isequal": "^4.5.0",
    "node-xlsx": "^0.23.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.14.2",
    "recharts": "^2.7.2",
    "semver": "^7.5.4",
    "sqlite3": "^5.1.6",
    "uuid": "^9.0.0",
    "zustand": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@babel/preset-react": "^7.22.5",
    "babel-loader": "^9.1.3",
    "concurrently": "^7.0.0",
    "electron": "^25.3.2",
    "electron-builder": "^24.6.3",
    "eslint-config-xo-react": "^0.27.0",
    "eslint-plugin-react": "^7.33.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "xo": "^0.55.0"
  },
  "xo": {
    "extends": "xo-react",
    "space": 2,
    "envs": [
      "node",
      "browser"
    ],
    "rules": {
      "object-curly-spacing": 0,
      "guard-for-in": 0,
      "no-negated-condition": 0,
      "new-cap": 0,
      "unicorn/prefer-module": 0,
      "unicorn/no-array-reduce": 0,
      "unicorn/prefer-object-from-entries": 0,
      "node/file-extension-in-import": 0,
      "import/extensions": 0,
      "react/jsx-tag-spacing": 0,
      "node/prefer-global/process": 0,
      "react/function-component-definition": 0
    }
  },
  "build": {
    "appId": "com.EntropiaTally.entropia-tally",
    "artifactName": "${name}-${version}.${ext}",
    "asarUnpack": [
      "bin/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "extraResources": [
      "./assets/icon.png"
    ],
    "portable": {
      "artifactName": "${name}-${version}-portable.${ext}"
    },
    "nsis": {
      "artifactName": "${name}-${version}-installable.${ext}",
      "oneClick": false
    },
    "win": {
      "target": [
        "portable",
        "nsis"
      ],
      "icon": "assets/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Game;Utility"
    }
  }
}
